<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- Header académico con gradiente institucional -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#003D82"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Patrón decorativo del header -->
    <View
        android:id="@+id/headerPattern"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#002A5C"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo institucional en el header -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SISTEMA ACADÉMICO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.15"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor principal elevado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="140dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center_horizontal">

            <!-- Imagen del robot circular y más grande -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoCard"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="28dp">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/iconorobot"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <!-- Título institucional -->
            <TextView
                android:id="@+id/tvInstitutionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNIAUTÓNOMA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#003D82"
                android:letterSpacing="0.1"
                android:layout_marginBottom="6dp" />

            <!-- Título principal de la app -->
            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EduRacha"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#002A5C"
                android:letterSpacing="0.05"
                android:layout_marginBottom="10dp" />

            <!-- Subtítulo académico -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema de Gestión Académica"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1565C0"
                android:layout_marginBottom="24dp" />

            <!-- Descripción mejorada -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plataforma integral para el seguimiento académico, gestión de tareas y control de progreso estudiantil"
                android:textSize="15sp"
                android:textColor="#666666"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="36dp" />

            <!-- Línea divisoria académica -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="36dp">

                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="#003D82" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:background="#FFB300"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="#003D82" />

            </LinearLayout>

            <!-- Botón Estudiante con diseño académico mejorado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#003D82"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="6dp">

                    <Button
                        android:id="@+id/btnStudent"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:text="Portal Estudiante"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@android:color/transparent"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.02"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:background="#FFB300"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Docente con diseño profesional mejorado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFB300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="6dp">

                    <Button
                        android:id="@+id/btnTeacher"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:text="Panel Docente"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@android:color/transparent"
                        android:textColor="#003D82"
                        android:letterSpacing="0.02"
                        android:drawableStart="@android:drawable/ic_menu_agenda"
                        android:drawableTint="#003D82"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="40dp"
                        android:background="#003D82"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Información adicional -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accede con tu cuenta institucional"
                android:textSize="14sp"
                android:textColor="#999999"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />

            <!-- Indicadores decorativos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#003D82"
                    android:layout_marginEnd="6dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#FFB300"
                    android:layout_marginEnd="6dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#003D82" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Footer institucional mejorado -->
    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#003D82" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFB300" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#003D82" />

    </LinearLayout>

    <!-- Elementos decorativos institucionales -->
    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="#FFB300"
        android:alpha="0.7"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#1565C0"
        android:alpha="0.5"
        android:layout_marginTop="90dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>