<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con saludo y configuración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola, Valentina"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Qué deseas aprender el día de hoy?"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="37dp"
                android:layout_height="41dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Configuración"
                android:src="@drawable/ic_settingss"
                 />

        </LinearLayout>

        <!-- Card de Racha -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_streak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/surface"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_fire"
                    app:tint="@color/streak_fire"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Racha actual"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡Sigue así!"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/streak_fire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="días"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Buscador -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/text_hint"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar por asignatura"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Card de Ranking -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_ranking"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/knowledge_blue"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking de estudiantes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_user_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VALENTINA"
                    android:textSize="14sp"
                    android:textColor="@color/on_primary"
                    android:alpha="0.9" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="@color/secondary"
                    android:layout_marginTop="12dp"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Header de Cursos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cursos inscritos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/btn_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VER TODOS >"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/knowledge_blue"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Filtros de Curso -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Todos"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="18dp"
                    android:backgroundTint="@color/surface_variant"
                    android:textColor="@color/primaryText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_theory"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Teórico"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="18dp"
                    android:backgroundTint="@color/knowledge_blue"
                    android:textColor="@color/on_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_practical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Práctico"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="18dp"
                    android:backgroundTint="@color/surface_variant"
                    android:textColor="@color/primaryText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_theory_practical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Teórico-práctico"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="18dp"
                    android:backgroundTint="@color/surface_variant"
                    android:textColor="@color/primaryText" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Lista de Cursos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Curso 1: Teoría de la computación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/surface"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/subject_math"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teórico"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/subject_math"
                            android:background="@drawable/badge_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teoría de la computación"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 CR"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐ 4.2"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 semestre"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bookmark_filled"
                        app:tint="@color/secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Curso 2: Desarrollo Móvil -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/surface"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/subject_engineering"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Práctico"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/subject_engineering"
                            android:background="@drawable/badge_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desarrollo Móvil"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 CR"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐ 4.8"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8 semestre"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bookmark_outlined"
                        app:tint="@color/text_hint" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Botón de logout (temporal) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="@color/on_primary"
            android:backgroundTint="@color/error"
            android:layout_marginTop="32dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>