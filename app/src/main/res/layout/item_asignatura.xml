<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Barra lateral de color institucional -->
        <View
            android:id="@+id/viewColorModalidad"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Contenedor circular del icono -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIconContainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/primary"
            app:layout_constraintStart_toEndOf="@id/viewColorModalidad"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgIconoAsignatura"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_myplaces"
                android:tint="@android:color/white"
                android:scaleType="centerInside" />

        </androidx.cardview.widget.CardView>

        <!-- Informaci칩n principal -->
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardIconContainer"
            app:layout_constraintEnd_toStartOf="@id/imgArrow">

            <TextView
                android:id="@+id/txtNombreAsignatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matem치ticas I"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtCodigoAsignatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="MAT-101"
                android:textSize="14sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:maxLines="1" />

            <!-- Badges con dise침o institucional -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSemestre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semestre 1"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/badge_semestre_background" />

                <TextView
                    android:id="@+id/txtModalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Presencial"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/badge_modalidad_background" />

            </LinearLayout>

        </LinearLayout>

        <!-- Flecha -->
        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#BDBDBD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutInfo"
            app:layout_constraintBottom_toBottomOf="@id/layoutInfo" />

        <!-- Descripci칩n -->
        <TextView
            android:id="@+id/txtPlanAulaPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Este curso cubre los fundamentos..."
            android:textSize="14sp"
            android:textColor="#616161"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/cardIconContainer"
            app:layout_constraintStart_toEndOf="@id/viewColorModalidad"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>